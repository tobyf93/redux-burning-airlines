<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">Sign Up</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= form_tag('/login', id: "login-form") do %>
								<!-- <form id="login-form" action="<%= login_path %>" method="post" role="form" style="display: block;"> -->
									<div class="form-group">
                    <%= text_field_tag :username, nil, id: "username", class: "form-control", placeholder: "Username", :autofocus => true %>
									</div>
									<div class="form-group">
                    <%= text_field_tag :password, nil, type: "password", id: "password", class: "form-control", placeholder: "Password", :autofocus => true %>
									</div>
									<div class="form-group text-center">
                    <%= text_field_tag :remember_me, nil, type: "checkbox", id: "remember", :autofocus => true %>
										<label for="remember"> Remember Me</label>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Enter">
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<a href="http://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>
												</div>
											</div>
										</div>
									</div>
								<% end %>
                <%= form_tag(users_path, id: "register-form", style: "display: none;") do %>
									<div class="form-group">
                    <%= text_field_tag :username, nil, id: "username", class: "form-control", placeholder: "Username", :autofocus => true %>
									</div>
									<div class="form-group">
                    <%= text_field_tag :password, nil, type: "password", id: "password", class: "form-control", placeholder: "Password", :autofocus => true %>
									</div>
									<div class="form-group">
                    <%= text_field_tag :password_confirm, nil, type: "password", id: "password_confirm", class: "form-control", placeholder: "Confirm Password", :autofocus => true %>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
